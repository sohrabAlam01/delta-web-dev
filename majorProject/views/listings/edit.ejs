<% layout("/layouts/boilerplate.ejs") -%>

<body>
    <!-- <h1 class="offset-2">Edit the listing</h1>  -->

   <div class="row">

    <div class="col-8 offset-2">
         
        <form method="post" action="/listings/<%=listing._id%>?_method=PUT">

               <div class="mb-3 mt-4">
                 <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                </div>

               <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea rows="4" name="listing[description]" class="form-control"><%= listing.description %></textarea>
               </div>

               <div class="mb-3">
                <label for="image" class="form-label">Image Link/URL</label>
                <input type="url" name="listing[image]" value="<%= listing.image %>" required class="form-control">
               </div>

               <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input required type="number" name="listing[price]" value="<%= listing.price %>" class="form-control">
               </div>
               
               <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="location" class="form-label">Location</label>
                    <input required type="text" name="listing[location]" value="<%= listing.location %>" class="form-control">
                   </div>
    
                   <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input required type="text" name="listing[country]" value="<%= listing.country %>" class="form-control">
                   </div>
               </div>

               <button type="submit" class="btn btn-primary">Save changes</button>    
        </form>

    </div>
   </div>







