<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All users</title>
    <style>
        table,
        tr,
        td {
            border: 1px solid black;
        }
    </style>
</head>

<form method="get" action="/user">  
    <button>Add User</button>
</form>

<body>

    <table>
        <thead>
            <tr>
                <th>UserId</th>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </thead>
        <% for(user of users) { %>
            <tbody>
                <tr>
                    <td>
                        <%= user.id %>
                    </td>
                    <td>
                        <%= user.username %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <form action="/user/<%=user.id%>/edit"><button>edit username</button></form>
                    </td>
                    <td>
                        <form method="get" action="/user/<%=user.id%>">
                            <button>delete</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
    </table>

</body>
</html>